{
  "manifest_version": 2,

  "name": "Grok",
  "description": "Learning, always learning.",
  "version": "1.0",

  "browser_action": {
    "default_icon": "icon.png",
    "default_popup": "main.html",
    "default_title": "Grok"
  },

  "background": {
    "scripts": ["background.js"]
  },

  "permissions": [
    "activeTab",
    "https://ajax.googleapis.com/",
    "http://localhost/"
  ]
}
